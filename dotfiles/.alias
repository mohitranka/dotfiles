# General .alias file
shopt -s expand_aliases
# Sensible defaults
alias ls='ls -FG'
alias vi=vim
alias grep='grep --color'
alias ssh='if [ "$(ssh-add -l)" = "The agent has no identities." ]; then ssh-add; fi; /usr/bin/ssh "$@"'
alias v=vim
alias t=todoist
alias ta='todoist add'
alias mail='neomutt'
alias email='neomutt'
alias neomutt='stty discard undef;/usr/local/bin/neomutt'
alias music='mpsyt'
alias g='git'
# Helper shortcuts
alias reload='source $HOME/.bashrc'

# Quick edit dotfiles
alias brc='vim ~/.bashrc'
alias vrc='vim ~/.vimrc'
alias arc='vim ~/.alias'
alias trc='vim ~/.tmux.conf'
alias mrc='vim ~/.muttrc'

# Go alias
alias gob='gofmt -l -s -w . && go build ./... && go build'
alias make='make -B'
alias q='SILENT_EXIT=1 builtin exit'
alias e='SILENT_EXIT=1 builtin exit'
